pipeline {
    agent none  // No global agent, will specify per stage
    
    stages {
        stage("Checkout Code") {
            agent { label 'Slave' }
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/devops5014/sample-webapp.git',
                        credentialsId: 'github-pass'
                    ]]
                ])
            }
        }
        
        stage("Build") {
            agent { label 'Slave' }
            steps {
                sh '''
                mvn clean install
                '''
            }
        }
        
        stage("Test") {
            agent { label 'Slave1' }  // This stage runs on Slave1
            steps {
                sh '''
                mvn test
                '''
            }
        }
        
        stage("Deploy To Artifactory") {
            agent { label 'Slave' }
            steps {
                configFileProvider([configFile(fileId: 'd583ab88-2c36-49aa-b582-49c2b6cc4d05', variable: 'MAVEN_SETTINGS')]) {
                    sh '''
                    mvn deploy -s $MAVEN_SETTINGS
                    '''
                }
            }
        }
    }
}
